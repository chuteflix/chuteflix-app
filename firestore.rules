rules_version = '2';
      
service cloud.firestore {
  match /databases/{database}/documents {

    // Usuários:
    match /users/{userId} {
      allow create: if request.auth != null;
      // Permite que usuários autenticados leiam perfis para exibir nomes.
      allow read: if request.auth != null;
      // Apenas o próprio usuário pode atualizar ou deletar seu perfil.
      allow update, delete: if request.auth.uid == userId;
      allow list: if request.auth != null;
    }

    // Configurações (Settings):
    // Qualquer usuário autenticado pode ler as configurações de pagamento.
    // Apenas administradores podem alterá-las.
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'admin';
    }

    // Permite leitura pública para as coleções essenciais da home.
    match /boloes/{bolaoId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }

    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }

    match /championships/{championshipId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'admin';
    }

    // Chutes: Leitura pública para prova social, escrita apenas por admins.
    match /chutes/{chuteId} {
      allow read: if true;
      allow list: if true;
      allow write: if request.auth.token.role == 'admin';
    }

    // Transações: Usuário só pode ver as próprias transações.
    match /transactions/{transactionId} {
      allow read, list: if request.auth.uid == resource.data.userId || request.auth.token.role == 'admin';
      allow write: if request.auth.token.role == 'admin';
    }

    // Regra genérica para outras coleções
    match /{collection}/{docId} {
      allow read, write: if request.auth.token.role == 'admin';
    }
  }
}