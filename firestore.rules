rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Usuários só podem ser criados por usuários autenticados
    // e só podem ser lidos, atualizados ou deletados pelo próprio usuário.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.uid == userId;
    }

    // Permite leitura pública para as coleções essenciais da home.
    // A escrita continua protegida.
    match /boloes/{bolaoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /championships/{championshipId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Para todas as outras coleções, a regra padrão se aplica:
    // leitura e escrita apenas para usuários autenticados.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
