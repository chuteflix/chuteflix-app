rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Usuários só podem alterar a própria foto
    match /users/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Usuários só podem enviar comprovantes para si mesmos
    match /receipts/deposits/{userId}/{fileName} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Apenas administradores podem adicionar ou alterar escudos de times
    match /teams/{teamId}/{fileName} {
        allow read;
        allow write: if request.auth != null && request.auth.token.admin == true
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }

    // Nenhuma outra rota é acessível por padrão
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
